<div class="modal-header">
  <h4 class="modal-title" id="myModalLabel">Nova Tarefa</h4>
  <button type="button" class="close" data-dismiss="modal">x</button>
</div>
<div class="modal-body">
  <%= form_for(:tarefa, url: { action: "create" }) do |f| %>
    <%= f.hidden_field :status, value: "em_andamento" %>
    <div class="form-group">
      <%= f.label :nome %><br />
      <%= f.text_field :nome, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :inicio %><br />
      <%= f.datetime_field :inicio, class: "form-control" %>
    </div>

    <%= f.submit "Criar", name:"submit" ,class: "btn btn-primary btn-block" %>
  <% end %>
</div>