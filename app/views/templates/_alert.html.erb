<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %> text-center"><%= value %></div>
<% end %>

<script type="text/javascript">
  // Remove mensagem alert depois de 4 segundos
  <% if defined?(keep).nil? %>
    setTimeout(function(){hideSystemNotice()}, 4000);
  <% end %>

  function hideSystemNotice() {
    $('.alert').slideUp('slow', function() {
      $('.alert').hide();
    });
  }
</script>