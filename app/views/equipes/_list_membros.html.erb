<table class="table table-striped table-bordered ">
  <thead class="text-center">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nome</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% equipe.membros.each do |membro| %>
      <tr>  
        <td><%= membro.id %></td>
        <td><%= membro.nome %></td>
        <td class="text-center">
          <a href="javascript:void(0);" onclick="remover_membro(<%= membro.id %>)" title="Remover"><%= render "templates/svg/red_cross" %> </a>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  function remover_membro(usuario_id){
    console.log("opa")
    $.ajax({
      url: "/equipes/remover_membro",
      method: "POST",
      dataType: "script",
      data: {
        'usuario_id': usuario_id,
        'equipe_id': <%= equipe.id %>
      }
    });
  }
</script>


